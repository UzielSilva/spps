
<% function color( val ) {
    switch ( val ){
        case 0:
            return '#a65fc6';
            break;
        case 1:
            return '#ff6363 ';
            break;
        case 2:
            return '#fff547';
            break;
        case 3:
            return '#00d667';
            break;
        case 4:
            return '#ffb351';
            break;
        case 5:
            return '#18f7b0';
            break;
    }

    return 'grey';
}%>

